{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["./src/generated/prisma"],
      "config/*": ["./src/config/*"],
      "controllers/*": ["./src/controllers/*"],
      "models/*": ["./src/models/*"],
      "routes/*": ["./src/routes/*"],
      "services/*": ["./src/services/*"],
      "libs/*": ["./src/libs/*"],
      "views/*": ["./src/views/*"],
      "validations/*": ["./src/validations/*"],
      "types/*": ["./src/types/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "prisma.config.ts"]
}
